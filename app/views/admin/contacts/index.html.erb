<h1><%= t("contacts")%></h1>

<table class="index">
  <tr>
    <%= hook :admin_contact_index_headers do %>
      <th><%= t("first_name") %></th>
      <th><%= t("last_name") %></th>
      <th><%= t("email") %></th>
			<th><%= t("phone") %></th>
      <th><%= t("topic") %></th>
      <th><%= t("sent") %></th>
    <% end %>
    <th>
      <%= hook :admin_contact_index_header_actions %>
    </th>
  </tr>
  <% @contacts.each do |contact| %>
    <tr id="<%= dom_id contact %>">
      <%- locals = {:contact => contact} %>
      <%= hook :admin_contact_index_rows, locals do %>
        <td><%= contact.first_name %></td>
				<td><%= contact.last_name %></td>
       	<td><%= contact.email %></td>
        <td><%= contact.phone %></td>
        <td><%= contact.topic.name %></td>
        <td><%= contact.created_at %></td>
      <% end %>
      <td class="actions">
        <%= hook :admin_contact_index_row_actions, locals do %>
					<% unless @contact.is_read %>
						<%= link_to t("mark_as_read"), mark_as_read_contact_path(@contact) %>
          <% else %>
						<%= t("closed") %>
					<% end %>
					&nbsp;
					<%= link_to_view contact %>
          &nbsp;
          <%= link_to_delete contact  %>
        <% end %>
      </td>
    </tr>
  <% end %>
</table>