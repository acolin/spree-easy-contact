<a href="#" id="contact-us" data-reveal-id="contact-us-modal">Contact-Us</a>

<% @body_id = 'contact_us' %>
<div id="contact-us">
  <h2><%= t("contact_us") %></h2>
  <%= hook :contact do %>
  <%= render "shared/error_messages", :target => @contact %>
  <%= form_for(@contact, :html => {:honeypot => true}) do |f| %>
    <%= hook :contact_inside_form do %>
    <div class="form-row">
      <%= f.label :first_name, t("first_name") %><br />
      <%= f.text_field :first_name %>
    </div>
    <div class="form-row">
      <%= f.label :last_name, t("last_name") %><br />
      <%= f.text_field :last_name %>
    </div>
    <div class="form-row">
      <%= f.label :email, t("email") %><br />
      <%= f.text_field :email %>
    </div>
    <div class="form-row">
      <%= f.label :phone, t("phone") %><br />
      <%= f.text_field :phone %>
    </div>

		<div class="select-row">
       <%= f.label :topic_id, t("topic") %>
       <%= f.collection_select :topic_id, @topics, :id, :name %>
    </div>

    <div class="form-row">
      <%= f.label :order_number, t("order_number") %> (<%= t("optionnal") %>)<br />
      <%= f.text_field :order_number %>
    </div>
    <div id="textarea-row">
      <%= f.label :message, t("message") %><br />
      <%= f.text_area :message %>
    </div>
    <div class="form-action">
			<%= f.submit t("send_message"), :class => "submit-button",  :value => "send" %>
		</div>
    <% end %>
  <% end %>
  <% end %>
</div>